pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Change directory to where package.json is located
                dir('backend') {
                    // Install dependencies using npm
                    sh 'npm install'
                }
            }
        }

        stage('Build Application') {
            steps {
                // Change directory to where package.json is located
                dir('backend') {
                    // Build the application
                    sh 'npm run build'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                // Change directory to where package.json is located
                dir('backend') {
                    script {
                        def scannerHome = tool 'scanner'
                        withSonarQubeEnv {
                            sh "echo 'sonar.projectKey=nodeapp' >> ${scannerHome}/conf/sonar-scanner.properties"
                            sh "${scannerHome}/bin/sonar-scanner"
                        }
                    }
                }
            }
        }

        stage('Building images (node and mongo)') {
            steps{
                dir('backend'){
                    script {
                        sh('docker-compose build')
                    }               
                }
            }
        }

        stage('Unit Test') {
            steps {
                // Change directory to where package.json is located
                dir('backend') {
                    // Run unit tests
                    sh 'npm test'
                }
            }
        }
    }

    // You can add post-build actions here if needed
}