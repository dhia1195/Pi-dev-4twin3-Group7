pipeline {
    agent any

    stages {
         stage('Checkout') {
            steps {
                // Use the 'checkout scm' step to fetch the source code
                checkout scm
            }
        }
         stage('Navigate to Directory') {
            steps {
                // Change directory to the desired location within the checked out branch
                dir('backend') {
                    // Perform actions within the directory
                    sh 'ls' // List files in the directory as an example
                }
            }
        }

        stage('Install dependencies') {
            steps{
                script {
                sh('npm install')
                        }
                }
            }
        stage('Unit Test') {
            steps{
                script {
                    sh('npm test')
                    }
                }
                }
    stage('Build application') {
            steps{
                script {
                sh('npm run build-dev')
                    }
                }
            }
    }
}

