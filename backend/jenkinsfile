pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Use the 'checkout scm' step to fetch the source code
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install dependencies using npm
                sh 'npm install'
            }
        }

        stage('Unit Test') {
            steps {
                // Run unit tests
                sh 'npm test'
            }
        }

        stage('Build Application') {
            steps {
                // Build the application
                sh 'npm run build-dev'
            }
        }
    }

    // You can add post-build actions here if needed
}
