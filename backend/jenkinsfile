pipeline {
    agent any
    environment {
        registryCredentials = credentials('nexus') // Assuming you have Jenkins credentials configured for Nexus
        registry = "192.168.50.10:8081"
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                // Change directory to where package.json is located
                dir('backend') {
                    // Install dependencies using npm
                    sh 'npm install'
                }
            }
        }

        stage('Build Application') {
            steps {
                // Change directory to where package.json is located
                dir('backend') {
                    // Build the application
                    sh 'npm run build'
                }
            }
        }

        stage('Building images (node and mongo)') {
            steps {
                dir('backend') {
                    // Build Docker images
                    script {
                        sh 'docker-compose build'
                    }
                }
            }
        }

        stage('Deploy to Nexus') {
            steps {
                dir('backend') {
                    // Push Docker image to Nexus
                    script {
                        docker.withRegistry("http://${registry}", registryCredentials) {
                            sh "docker push ${registry}/nodemongoapp:5.0"
                        }
                    }
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                // Change directory to where package.json is located
                dir('backend') {
                    // Run SonarQube analysis
                    script {
                        def scannerHome = tool 'scanner'
                        withSonarQubeEnv {
                            sh "echo 'sonar.projectKey=nodeapp' >> ${scannerHome}/conf/sonar-scanner.properties"
                            sh "${scannerHome}/bin/sonar-scanner"
                        }
                    }
                }
            }
        }

        stage('Unit Test') {
            steps {
                // Change directory to where package.json is located
                dir('backend') {
                    // Run unit tests
                    sh 'npm test'
                }
            }
        }
    }
    // You can add post-build actions here if needed
}
