pipeline {
    agent any

    stages {
         stage('Checkout') {
            steps {
                // Use the 'checkout scm' step to fetch the source code
                checkout scm
            }
        }
        stage('Install dependencies') {
            steps{
                script {
                sh('npm install')
                        }
                }
            }
        stage('Unit Test') {
            steps{
                script {
                    sh('npm test')
                    }
                }
                }
    stage('Build application') {
            steps{
                script {
                sh('npm run build-dev')
                    }
                }
            }
    }
}

