pipeline {
    agent any

    stages {
        stage('GIT') {
            steps {
                           echo 'Pulling code from git . . .'
                git branch :"user",
                url:"https://github.com/dhia1195/Pi-dev-4twin3-Group7.git"
            }
        }
        stage('Install dependencies') {
            steps{
                script {
                sh('npm install')
                        }
                }
            }
        stage('Unit Test') {
            steps{
                script {
                    sh('npm test')
                    }
                }
                }
    stage('Build application') {
            steps{
                script {
                sh('npm run build-dev')
                    }
                }
            }
    }
}

